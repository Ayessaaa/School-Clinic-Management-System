        }, false);
      } else {
        document.attachEvent('oncontextmenu', function() {
          window.event.returnValue = false;
        });
      }
    </script>
  </head>
  <body class="px-10 bg-gray-50">
    <div class="flex w-fit mx-auto items-baseline gap-3 mt-10 mb-10">
      <img src="img/logo.png" class="inline w-10 h-10" alt="logo" />

      <p class="text-center font-bold text-4xl">MediSYNC</p>
    </div>

    <% if (error){ %>
      <div class="bg-red-100 px-10 w-fit mx-auto py-1 my-3 rounded-full border border-red-300">
        <p class="text-center text-red-500 font-semibold text-lg">Wrong Credentials!</p>
      </div>
    <% } %>

    <div class="bg-white py-3 lg:w-1/3 md:w-1/2 w-full mx-auto px-10 border rounded-md">

      <form action="" method="POST" onkeydown="return event.key != 'Enter';">
        <p class="text-center font-medium text-lg mt-5">Admin ID</p>

        <div
          id="scan_button"
          class="cursor-pointer mt-3 mx-auto transition-all h-44 bg-red-50 place-content-center border-dashed hover:bg-red-100 hover:border-red-400 border-red-300 rounded-xl text-center shadow-sm border-2"
        >
          <span class="tracking-wide text-2xl font-extrabold" id="scan_text"
            >SCAN ID</span
          ><br />
          <span class="text-sm text-gray-500" id="scan_subtitle">Tap your ID in the scanner</span>
        </div>

        <div
          class="transition-all mx-auto  w-full flex-col items-center flex mt-3"
        >
          <p class="text-center mt-5 font-medium text-lg">Password</p>
          <input
            placeholder="********"
            id="password"
            name="password"
            type="password"
            class="mt-2 mx-auto transition-all w-full p-1 bg-gray-100 hover:bg-gray-200 hover:border-gray-400 border-gray-300 rounded-lg text-center shadow-sm border-2"
          />
          <div class="flex gap-2 mt-2 text-gray-500 text-sm">
            <input type="checkbox" onclick="myFunction()" class="text-center" />
            Show Password
          </div>
        </div>

        <div class="w-fit mx-auto">
          <button
            class="bg-red-100 border-2 border-red-300 rounded-md px-3 py-0.5 font-bold text-lg text-red-400 mt-10 hover:bg-red-200 active:text-white active:bg-red-300 active:border-red-400"
          >
            Submit
          </button>
        </div>

        <script>
          function myFunction() {
            var x = document.getElementById("password");
            if (x.type === "password") {
              x.type = "text";
            } else {
              x.type = "password";
            }
          }
        </script>

        <input
          autocomplete="off"
          type="number"
          name="rfid"
          id="rfid_input"
          class="text-white focus:outline-none cursor-default [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none"
        />
      </form>

    </div>

    <script type="text/javascript" src="../../js/login.js"></script>
  </body>
</html>
